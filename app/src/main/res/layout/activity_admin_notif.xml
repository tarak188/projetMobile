<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminActivityNotif">

    <EditText
        android:id="@+id/filterDateEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Filter by date"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/filterNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Filter by name"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterDateEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/adminNotifTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Notifications"
        android:layout_margin="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/filterNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
